<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/option_height"
    android:background="@color/background_item">

    <View
        android:id="@+id/v_center"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:id="@+id/item_ranklab"
        android:layout_width="@dimen/ranklable_width"
        android:layout_height="@dimen/option_height"
        android:background="@color/white_overlay"
        >

        <View
            android:id="@+id/v_center8"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/ranklab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_center8"
            android:layout_marginLeft="@dimen/divi_height"
            android:textSize="@dimen/fontsize_smal"
            android:textColor="@color/fontcolor_Primary"
            android:text="@string/NO."/>
        <TextView
            android:id="@+id/item_userranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_center8"
            android:layout_alignLeft="@id/ranklab"
            android:layout_alignRight="@id/ranklab"
            android:gravity="center"
            android:textColor="@color/fontcolor_Primary"
            android:textSize="@dimen/fontsize_big"
            android:text="14"/>

    </RelativeLayout>



    <ImageView
        android:id="@+id/item_usercover"
        android:layout_width="@dimen/usercover_diameter_small"
        android:layout_height="@dimen/usercover_diameter_small"
        android:layout_toRightOf="@id/item_ranklab"
        android:layout_marginLeft="@dimen/divi_height"
        android:layout_marginRight="@dimen/divi_height"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:background="@drawable/icon_circle_blue"/>

    <TextView
        android:id="@+id/item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_usercover"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@color/fontcolor_Primary"
        android:textSize="@dimen/fontsize_big"
        android:text="用户名"/>

    <TextView
        android:id="@+id/item_userscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/divi_height"
        android:paddingRight="@dimen/divi_height"
        android:textSize="@dimen/fontsize_big"
        android:textColor="@color/fontcolor_Primary"
        android:text="@string/scores"/>

</RelativeLayout>